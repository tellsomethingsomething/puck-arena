{
  "name": "puck-arena",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time multi-user interactive puck system",
  "pnpm": {
    "onlyBuiltDependencies": []
  },
  "scripts": {
    "build:shared": "pnpm --filter @puck-arena/shared build",
    "dev": "pnpm build:shared && pnpm -r --parallel --filter=!@puck-arena/shared dev",
    "dev:api": "pnpm build:shared && pnpm --filter @puck-arena/api dev",
    "dev:arena": "pnpm build:shared && pnpm --filter @puck-arena/arena dev",
    "dev:admin": "pnpm build:shared && pnpm --filter @puck-arena/admin dev",
    "build": "pnpm build:shared && pnpm -r --filter=!@puck-arena/shared build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "keywords": ["puck", "physics", "multiplayer", "websocket", "matter.js"],
  "author": "Tom / Tell Productions",
  "license": "MIT"
}
